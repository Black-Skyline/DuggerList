<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GateActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/gate_fragments_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/gate_bottom_navi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.viewpager2.widget.ViewPager2>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="36dp"
        app:maxImageSize="70dp"
        android:elevation="@dimen/dp_size_5"
        android:focusable="true"
        android:src="@drawable/icon_fab_more_action"
        app:fabCustomSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/gate_bottom_navi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:pressedTranslationZ="@dimen/dp_size_18" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/gate_bottom_navi"
        style="@style/bottom_navi_default_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_gate_bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>