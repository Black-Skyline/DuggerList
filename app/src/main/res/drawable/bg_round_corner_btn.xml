<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 背景颜色 -->
    <solid android:color="#E230F8CB" />

    <!-- 边框的宽度和颜色颜色 -->
    <stroke
        android:width="2dip"
        android:color="#F0F3F30F" />

    <!-- android:radius 弧形的半径 -->
    <corners android:radius="15dp" />

    <!-- padding：Button/控件元素里面的文字与Button/控件元素的边界的间隔 -->
    <padding
        android:bottom="5dp"
        android:left="3dp"
        android:right="3dp"
        android:top="5dp" />
</shape>